{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["jquery.js", "my_content_script.js"],
      "matches": ["https://www.linkedin.com/in/*"]
    }
  ],
  "browser_action": {
    "default_title": "Make this page red",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
